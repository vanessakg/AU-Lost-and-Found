h3  Current Lost Items Inventory
h2 Search for an item
input#myInput(type='text', onkeyup='filterSearch()', placeholder='Search for an item...', title='Type in a item')
table.table.table-striped
  thead
    tr
      th(scope='col') Item Name
      th(scope='col') Location Found
      th(scope='col') Description
  tbody#myTable
script.
  var array = []
  $.ajax({
  method: 'GET',
  url: 'http://localhost:3001/lostItemsStudent',
  success: function(response) {
  array = response;
  buildTable(array)
  console.log(array)
  }
  })
  function buildTable(data) {
  var table = document.getElementById('myTable')
  for (var i = 0; i < data.length; i++) {
  var row = `<tr>
  <td><a href="#">${data[i].itemName}</a></td>
  <td><a href="#">${data[i].locationFound}</a></td>
  <td><a href="#">${data[i].description}</a></td>
  </tr>`
  table.innerHTML += row
  }
  }
  function filterSearch(){
  var input, filter, ul, li, a, i, txtValue;
  input = document.getElementById("myInput");
  filter = input.value.toUpperCase();
  ul = document.getElementById("myTable");
  li = ul.getElementsByTagName("th");
  for (i = 0; i < li.length; i++) {
  a = li[i].getElementsByTagName("a")[0];
  txtValue = a.textContent || a.innerText;
  if (txtValue.toUpperCase().indexOf(filter) > -1) {
  li[i].style.display = "";
  } else {
  li[i].style.display = "none";
  }
  }
  }
